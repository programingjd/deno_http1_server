{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/programingjd/deno_http1_server/main/StaticConfig.schema.json",
  "title": "StaticConfig",
  "description": "Static files serving config",
  "type": "object",
  "properties": {
    "domain": {
      "description": "The domain to use for static files.",
      "type": "string",
      "pattern": "^.{1,61}[.].{2,24}$"
    },
    "headers": {
      "description": "Custom headers for all file types",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9-_]+$": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "path": {
      "description": "Path under which the files will be served.",
      "type": "string",
      "minLength": 1,
      "default": "/"
    },
    "excludes": {
      "description": "List of relative paths to exclude.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "mime_types": {
      "description": "File types config",
      "$ref": "https://raw.githubusercontent.com/programingjd/deno_http1_server/main/MimeTypes.schema.json"
    }
  },
  "additionalProperties": false
}
